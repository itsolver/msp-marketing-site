{
  "name": "itsolver",
  "version": "1.0.1",
  "description": "Marketing website for IT Solver, a managed service provider. Built with Gulp + Jekyll + Travis CI + Firebase",
  "repository": {
    "type": "git",
    "url": "git://github.com/itsolver/msp-marketing-site/"
  },
  "keywords": [
    "jekyll",
    "gulp"

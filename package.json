    "gulp-newer": "^1.4.0",
    "gulp-postcss": "^9.0.1",
    "gulp-pretty-data": "^0.1.2",
    "gulp-responsive": "^3.0.1",
    "gulp-rev": "^9.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-shell": "^0.8.0",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-util": "^3.0.8",
    "require-dir": "^1.2.0",
